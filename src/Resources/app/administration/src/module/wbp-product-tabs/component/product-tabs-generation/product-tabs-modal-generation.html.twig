{% block sw_product_tabs_modal_generation_modal %}
    <sw-modal class="wbp-product-tabs-modal-generation-modal-content"
              @modal-close="$emit('close-modal')">

        {% block wbp_product_tabs_modal_generation_sidebar %}

            <div v-if="errors.length > 0">
                <p v-for="error in errors">{{ error }}</p>
            </div>

            <div>
                <sw-text-field
                        required
                        class="wbp-product-tabs-tabsName"
                        validation="required"
                        v-model="tabs.name"
                        :label="$tc('wbp-product-tabs.general.tabsName')"
                        :error="tabsNameError"
                >
                </sw-text-field>

            </div>

            <div>
                <sw-switch-field label="" v-model="checkbox"></sw-switch-field>
            </div>


            {% block sw_product_tabs_modal_generation_multiselect %}

                <sw-multi-select v-if="checkbox"
                                 v-model="tabs.selectProductsIds"
                                 class="sw-flow-rule-modal__type"
                                 value-property="id"
                                 label-property="name"
                                 :label="$tc('wbp-product-tabs.general.products')"
                                 :options="selectProducts"
                                 :is-loading="isLoading"
                >
                    <template #selection-label-property="{ item }">
                        {{ item.name }}
                    </template>

                    <template #result-label-property="{ item }">
                        {{ item.name }}
                    </template>

                </sw-multi-select>

            {% endblock %}

            {% block sw_product_tabs_modal_generation_description_editor %}

                <sw-text-editor v-else
                                v-model="tabs.description"
                                :label="$tc('wbp-product-tabs.general.description')"
                >
                </sw-text-editor>

            {% endblock %}

            <div v-if="item === null">
                <sw-button @click="saveNewTab()">{{ $tc('wbp-product-tabs.general.save') }}</sw-button>
            </div>

            <div v-else>
                <sw-button @click="saveTabs()">{{ $tc('wbp-product-tabs.general.edit') }}</sw-button>
            </div>


        {% endblock %}

    </sw-modal>

{% endblock %}